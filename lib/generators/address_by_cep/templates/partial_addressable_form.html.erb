<%= f.fields_for :addresses do |address_form| %>
  <div class="field">
    <%= address_form.label :zip_code, "CEP", :id => "lbzipcode" %><br />
    <%= address_form.text_field :zip_code, :maxlength => 10, :id => "address_zip_code", :onBlur => "get_address()" %>
  </div>
  <div class="field">
    <%= address_form.label :street %><br />
    <%= address_form.text_field :street, :id => "address_street" %>
  </div>
  <div class="field">
    <%= address_form.label :number %><br />
    <%= address_form.text_field :number, :id => "address_number" %>
  </div>
  <div class="field">
    <%= address_form.label :neighborhood %><br />
    <%= address_form.text_field :neighborhood, :id => "address_neighborhood" %>
  </div>
  <div class="field">
    <%= address_form.label :city %><br />
    <%= address_form.text_field :city, :id => "address_city" %>
  </div>
  <div class="field">
    <%= address_form.label :state %><br />
    <%= address_form.text_field :state, :id => "address_state" %>
  </div>
  <div class="field">
    <%= address_form.label :complement %><br />
    <%= address_form.text_field :complement %>
  </div>
<% end %>